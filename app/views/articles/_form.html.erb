<!-- Esto es una vista parcial, quiere decir que la puedo utilizar en varias partes
de la aplicación, esto se guarda con el nombre _nombreDeLaVistaParcial.html.erb
-->
<%= form_for(@articulo) do |f| %>
	
	<!-- 
		Esta parte es para la validación de los campos, informa que pasa en cao de error.

		cuando no se puede guardar se genera un metodo errors con los mensajes de error.
		esto es un array que se puede iterar segun sea.
	-->
	<% @articulo.errors.full_messages.each do |mensaje| %>
		<div class="form-group col-md-6 col-md-offset-3">
			<div class="alert alert-danger">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> <%= mensaje%>
			</div>
		</div>
	<%end%>
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	

	<div class="form-group col-md-8 col-md-offset-3">
		<legend><%= accion_formulario %> artículo</legend>
		<!--<input type="text" class="form-control" id="" placeholder="Input field">-->
		<div class="col-md-10">
			<label for="">Título</label>
			<!-- PARA CREAR cada uno de los compos se hace de la siguiente forma:
				variable_elemento.tipo_de_elemento :campo_de_la_BD, atributo1:"++", atributoN:"++" 
			 -->
			<%= f.text_field :title, placeholder: "Título del artículo", class: "form-control" %>
		</div>
		<br><br><br><br>
		<div class="col-md-10">
			<label for="">Cuerpo</label>
			<%= f.text_area :body, placeholder: "Cuerpo del artículo", class: "form-control" %>
		</div>
		<br><br><br><br><br><br>
		<div class="col-md-10 text-right">			
			<%= f.submit "Guardar", class: "btn btn-success" %>
		</div>
	</div>
	
<%end%>